{{! Template for the frost-detail-tab-actions component }}

{{#each tabActions as |tabAction|}}
  {{#frost-button
    class=(concat css '-button')
    hook= (concat hookPrefix '-button-' tabAction.label)
    priority="tertiary"
    size="small"
    vertical=true
    onClick=(action onDispatch tabAction.action)
    disabled=tabAction.disabled
    isVisible=tabAction.isVisible
  }}
    <div class="icon-text text">
      {{frost-icon
        hook=(concat hookPrefix '-buttonIcon')
        icon=tabAction.icon.name
        pack=tabAction.icon.pack
      }}
      {{#frost-popover
        class='tooltip-frost-action'
        hook=(concat hook '-action')
        closest=true
        offset=10
        target='.frost-detail-tab-actions-button'
        position='top'
        handlerIn='mouseover'
        handlerOut='mouseout'
      }}
        <div class="text">{{tabAction.label}}</div>
      {{/frost-popover}}
    </div>

  {{/frost-button}}
{{/each}}
