<div class='addon-demo'>
  <div class='addon-demos'>
    <div class='addon-demo-title'>
      Demos
    </div>
    {{#frost-scroll
      class='addon-demo-selectors'
      hook='addonDemoSelectors'
    }}
      {{#link-to 'demo.overview'}}Overview{{/link-to}}
      <div class='addon-demo-selector-title'>
        Building blocks
        {{#link-to 'demo.content'}}Content{{/link-to}}
        {{#link-to 'demo.selected-tab'}}Selected tab{{/link-to}}
        {{#link-to 'demo.disable-tab'}}Disable tab{{/link-to}}
        {{#link-to 'demo.block-format'}}Block format{{/link-to}}
      </div>
      <div class='addon-demo-selector-title'>
        Tabs components
        {{#link-to 'demo.tab'}}Tab{{/link-to}}
      </div>
      <div class='addon-demo-selector-title'>
        Tests
        {{#link-to 'demo.hook'}}Hook{{/link-to}}
      </div>
      <div class='addon-demo-selector-title'>
        The future
        {{#link-to 'demo.future'}}Future{{/link-to}}
      </div>
    {{/frost-scroll}}
  </div>
  {{#frost-scroll
    class='addon-demo-example'
    hook='addonDemoExample'
  }}
    {{outlet}}
  {{/frost-scroll}}
</div>
