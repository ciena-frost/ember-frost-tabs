<div class='ember-frost-demo'>
{{#frost-tabs on-change=(action 'demoTabSelected') selection=demoTabSelected}}
  {{#frost-tab alias='Template' id='template'}}
      <div id='content'>
  <pre><code>
    \{{#frost-tabs frostTabs=tabs}}
    \{{#frost-tab alias='Template' id='template'}}
      ...
    \{{/frost-tab}}
    \{{#frost-tab alias='Controller' id='controller'}}
      ...
    \{{/frost-tab}}
    \{{#frost-tab id='css' alias='CSS' disabled=true}}
      ...
    \{{/frost-tab}}
    \{{/frost-tabs}}
  </code></pre>
      </div>
  {{/frost-tab}}
  {{#frost-tab alias='Controller' id='controller'}}
      <div id='content'>
<pre><code>
import Ember from 'ember'

export default Ember.Controller.extend({
  queryParams: ['selectedTab'],

  selectedTab: 'controller',

  actions: {
    tabSelected (tab) {
      this.set('selectedTab', tab)
    }
  }
})
</code></pre>
      </div>
  {{/frost-tab}}
  {{#frost-tab alias='Route' id='route'}}
          <div id='content'>
<pre><code>
import Ember from 'ember'

export default Ember.Route.extend({
  queryParams: {
    selectedTab: {
      as: 'tab'
    }
  }
})
</code></pre>
      </div>
  {{/frost-tab}}
  {{#frost-tab alias='CSS' disabled=true id='css'}}
      <div id='content'>
<pre><code>
    .dummy-notification-container {
      position: fixed;
      top: 60px;
      right: 10px;
      z-index: 999;
      width: 80%;
      max-width: 400px;
      margin: auto;
    }

    pre {
      font-size: 80%;
      line-height: 140%;
      white-space: pre;
      white-space: pre-wrap;
      white-space: -moz-pre-wrap;
      white-space: -o-pre-wrap;
    }

    code {
      font-size: 80%;
      line-height: 140%;
      white-space: pre;
      white-space: pre-wrap;
      white-space: -moz-pre-wrap;
      white-space: -o-pre-wrap;
      background: #faf8f0;
    }

    #content code {
      display: block;
      padding: 0.5em 1em;
      border: 1px solid #bebab0;
    }
</code></pre>
      </div>
  {{/frost-tab}}
{{/frost-tabs}}
</div>
